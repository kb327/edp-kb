<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edp.wat.edu.pl.projectkb.controller.RegisterViewController">

   <children>
      <VBox alignment="CENTER" spacing="15.0" layoutX="100.0" layoutY="30.0" prefWidth="300.0">
         <Label text="Nazwa użytkownika" styleClass="form-label"/>
         <TextField fx:id="usernameText" promptText="username" styleClass="input-field"/>

         <Label text="Email" styleClass="form-label"/>
         <TextField fx:id="emailText" promptText="email" styleClass="input-field"/>

         <Label text="Hasło" styleClass="form-label"/>
         <PasswordField fx:id="passwdText" promptText="password" styleClass="input-field"/>

         <Label text="Powtórz hasło" styleClass="form-label"/>
         <PasswordField fx:id="passwdSecText" promptText="repeat password" styleClass="input-field"/>

         <Label text="Imię" styleClass="form-label"/>
         <TextField fx:id="nameText" promptText="name" styleClass="input-field"/>

         <Label text="Nazwisko" styleClass="form-label"/>
         <TextField fx:id="surnameText" promptText="surname" styleClass="input-field"/>

         <Button text="Zarejestruj się" onMouseClicked="#register" styleClass="main-button"/>
      </VBox>
   </children>
</AnchorPane>
